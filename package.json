{
  "name": "peer",
  "version": "0.0.0-development",
  "description": "PeerJS server component",
  "main": "dist/src/index.js",
  "bin": {
    "peerjs": "./bin/peerjs"
  },
  "keywords": [
    "peerjs",
    "webrtc",
    "signaling"
  ],
  "files": [
    "bin/",
    "dist/",
    "index.d.ts"
  ],
  "homepage": "https://github.com/peers/peerjs-server#readme",
  "bugs": {
    "url": "https://github.com/peers/peerjs-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hevyhomie/peerjs-server.git"
  },
  "author": "Michelle Bu, Eric Zhang, Alex Sosnovskiy",
  "license": "MIT",
  "scripts": {
    "preversion": "npm run clean && npm run build",
    "build": "tsc",
    "clean": "rimraf ./dist",
    "lint": "eslint --ext .js,.ts .",
    "tsc": "tsc",
    "prebuild": "npm run lint",
    "test": "npm run lint && mocha -r ts-node/register \"test/**/*\"",
    "start": "bin/peerjs --port ${PORT:=8000}",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts --exec npm run dev:start",
    "semantic-release": "semantic-release",
    "postinstall": "npm run typings",
    "typings": "typings install"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "ws": "^7.2.3",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/chai": "^4.2.11",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.18.33",
    "@types/ws": "^7.2.3",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "mocha": "^10.1.0",
    "mock-socket": "8.0.5",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "sinon": "^7.5.0",
    "ts-node": "^8.7.0",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  }
}
